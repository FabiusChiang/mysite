{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2015"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "alwaysStrict": true
    },
    "include": ["src/**/*"],
    "files": [
        "src/Index.ts",
        "src/UserStatusManager.ts",
        "src/UserStatus.ts",
        "src/Logger.ts",
        "src/KeyValueStorage.ts",
        "src/DynamoDBService.ts",
        "src/MultiRegionDynamoDBService.ts",
        "src/safeLoggerWrapper.ts",
        "tests/demo.test.ts"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}